 <h2> My Opportunities</h2>
 <% current_user.opportunities.each do |opportunity| %>
<ul class="chunky">
	<li class="active">
		<div class="left">
			<h2><%=opportunity.task%></h2>
			<p><%=opportunity.suggestion%></p>
		</div>
		<div class="right">
			<%= link_to "Edit", edit_opportunity_path(opportunity), :class => "button-style2"%>
			<%= link_to 'Delete Opportunity', opportunity, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button-style2" %>
		</div>
	</li>
</ul>
<%= link_to 'New Opportunity', new_opportunity_path, :class => "button-style2" %>	
<%end%>