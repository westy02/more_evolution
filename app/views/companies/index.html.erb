
 <h2> Active company</h2>
 <% @active_company.each do |company| %>
<ul class="chunky">
	<li class="active">
		<div class="left">
			<h2><%=company.name%></h2>
			<p><%=company.email%></p>
			<strong style="padding: 0px 0px 0px 20px; color:red;">Currently Active</strong>
		</div>
		<div class="right">
			<%= link_to "Edit", edit_company_path(company), :class => "button-style2"%>
			<%= link_to 'Delete Company', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button-style2" %>
			<% company.assignments.each do |assignment| %>
			<%= form_for assignment do |f|%>
			Deactivate <%= f.check_box :active_company %>
			<%= f.submit%>
<%end%>		
<%end%>	 
		</div>
	</li>
</ul>	
<%end%>
<h2> My other companies</h2>
<% @inactive_companies.each do |company| %>
<ul class="chunky">
	<li class="inactive">
		<div class="left">
			<h2><%=company.name%></h2>
			<p><%=company.email%></p>
		</div>
		<div class="right">
			<%= link_to "Edit", edit_company_path(company), :class => "button-style2"%>
			<%= link_to 'Delete Company', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button-style2" %>
			
			<% company.assignments.each do |assignment| %>
			<%= form_for assignment do |f|%>
			Activate <%= f.check_box :active_company %>
			<%= f.submit%>
<%end%>			 
<%end%>

		</div>

	</li>
</ul>	


 <%end%>
